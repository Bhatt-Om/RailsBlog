<h1>Articles listing Page</h1>

<table >
  <thead>
    <th>Title</th>
    <th>Description</th>
    <th colspan=3>Actions</th>
  </thead>

  <tbody>
    <% @articles.each do |artc|  %>
      <tr>
        <td><%= artc.title %></td>
        <td><%= artc.description %></td>
        <td><%= link_to 'Show', article_path(artc) %></td>
        <td><%=  link_to 'Edit', edit_article_path(artc)%></td>
        <td><%= link_to 'Delete', article_path(artc), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'Create new Article', new_article_path %>
</p>
